{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2020",
    "lib": ["ES2020"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "outDir": "./dist",
    "rootDir": ".",
    "declaration": true
  },
  "include": [
    "index.ts",
    "core/**/*.ts",
    "plugins/**/*.ts"
  ],
  "exclude": [
    "templates/**/*",
    "node_modules",
    "dist"
  ]
}
