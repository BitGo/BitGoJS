    "bitcoinjs-message": "npm:@bitgo-forks/bitcoinjs-message@1.0.0-master.2",
    "bolt11": "^1.4.0",
    "bs58": "^4.0.1",
    "create-hmac": "^1.1.7",
    "debug": "^3.1.0",
    "elliptic": "^6.5.2",
    "ethereumjs-util": "7.1.5",
    "fp-ts": "^2.12.2",
