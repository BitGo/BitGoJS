    "superagent": "^9.0.1",
    "tweetnacl": "^1.0.3",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@openpgp/web-stream-tools": "0.0.14",
    "@types/lodash": "^4.14.151",
    "nyc": "^15.0.0"
  }
