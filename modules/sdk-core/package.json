    "@bitgo/utxo-lib": "^10.1.0",
    "@noble/secp256k1": "1.6.3",
    "@stablelib/hex": "^1.0.0",
    "@types/elliptic": "^6.4.12",
    "@types/superagent": "4.1.15",
    "bech32": "^2.0.0",
    "big.js": "^3.1.3",
    "bigint-crypto-utils": "3.1.4",
