{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "outDir": "./dist",
    "rootDir": ".",
    "esModuleInterop": true,
    "strictPropertyInitialization": false,
    "typeRoots": [
      "./types",
      "../../types",
      "./node_modules/@types",
      "../../node_modules/@types"
    ]
  },
  "include": [
    "src/**/*",
    "package.json"
  ],
  "exclude": [
    "node_modules"
  ]
}
