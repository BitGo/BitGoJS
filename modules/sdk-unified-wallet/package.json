{
  "name": "@bitgo/sdk-unified-wallet",
  "version": "4.0.0",
  "description": "Bitgo SDK library for EVM Wallets",
  "main": "./dist/src/index.js",
  "type": "./dist/src/index.d.ts",
  "scripts": {
    "build": "yarn tsc --build --incremental --verbose .",
    "check-fmt": "prettier --check .",
    "clean": "rm -r ./dist",
    "lint": "eslint --quiet .",
    "prepare": "npm run build",
    "fmt": "prettier --write '{src,test}/**/*.{ts,js,json}'",
    "test": "npm run coverage",
    "coverage": "nyc -- npm run unit-test",
    "unit-test": "mocha"
  },
  "dependencies": {
    "@bitgo/sdk-core": "^20.0.0",
    "@bitgo/statics": "^41.0.0"
  },
  "devDependencies": {
    "@bitgo/sdk-api": "^1.36.0",
    "@bitgo/sdk-coin-eth": "^16.0.0",
    "@bitgo/sdk-coin-polygon": "^13.0.0",
    "@bitgo/sdk-coin-sol": "^2.32.0",
    "@bitgo/sdk-test": "^2.0.0"
  },
  "author": "Bitgo DEFI Team <defi-team@bitgo.com>",
  "license": "MIT",
  "engines": {
    "node": ">=16 <21"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/BitGo/BitGoJS.git",
    "directory": "modules/sdk-unified-wallet"
  },
  "lint-staged": {
    "*.{js,ts}": [
      "yarn prettier --write",
      "yarn eslint --fix"
    ]
  },
  "publishConfig": {
    "access": "public"
  },
  "nyc": {
    "extension": [
      ".ts"
    ]
  }
}
