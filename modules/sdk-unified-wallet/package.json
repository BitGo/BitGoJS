{
  "name": "@bitgo/sdk-unified-wallet",
  "version": "3.0.0",
  "description": "Bitgo SDK library for EVM Wallets",
  "main": "./dist/src/index.js",
  "type": "./dist/src/index.d.ts",
  "scripts": {
    "build": "yarn tsc --build --incremental --verbose .",
    "check-fmt": "prettier --check .",
    "clean": "rm -r ./dist",
    "lint": "eslint --quiet .",
    "prepare": "npm run build",
    "fmt": "prettier --write '{src,test}/**/*.{ts,js,json}'"
  },
  "dependencies": {
    "@bitgo/sdk-core": "^8.0.0",
    "@bitgo/statics": "^15.0.0"
  },
  "devDependencies": {
    "@bitgo/sdk-api": "^1.9.11",
    "@bitgo/sdk-coin-eth": "^4.3.0",
    "@bitgo/sdk-coin-polygon": "^1.5.0",
    "@bitgo/sdk-coin-sol": "^2.4.0",
    "@bitgo/sdk-test": "^1.2.16"
  },
  "author": "Bitgo DEFI Team <defi-team@bitgo.com>",
  "license": "MIT",
  "engines": {
    "node": ">=14 <17"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/BitGo/BitGoJS.git",
    "directory": "modules/sdk-unified-wallet"
  },
  "lint-staged": {
    "*.{js,ts}": [
      "yarn prettier --write",
      "yarn eslint --fix"
    ]
  },
  "publishConfig": {
    "access": "public"
  },
  "nyc": {
    "extension": [
      ".ts"
    ]
  }
}
