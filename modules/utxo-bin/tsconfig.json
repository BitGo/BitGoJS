{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "nodenext",
    "outDir": "./dist",
    "rootDir": ".",
    "typeRoots": ["./node_modules/@types", "../../node_modules/@types"],
    "allowJs": false,
    "strict": true,
    "useUnknownInCatchVariables": false
  },
  "include": ["src/**/*", "bin/**/*", "test/**/*"],
  "exclude": ["node_modules"],
  "references": [
    {
      "path": "../blockapis"
    },
    {
      "path": "../statics"
    },
    {
      "path": "../utxo-lib"
    }
  ]
}
